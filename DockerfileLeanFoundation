    pykalman==0.9.5                 \
    pyportfolioopt==1.2.2           \
    pyramid-arima==0.9.0            \
    pyro-ppl==1.3.1                 \
    riskparityportfolio==0.2        \
    sklearn-json==0.1.0             \
    stable-baselines==2.10.0        \
    statistics==1.0.3.5             \
    statsmodels==0.11.1             \
    tensorforce==0.5.5              \
    QuantLib-Python==1.18           \
    xgboost==1.1.0                  \
    dtw-python==1.0.5               \
    cntk==2.7                       \
    mxnet==1.6                      \
    gluonts==0.4.3                  \
    gplearn==0.4.1                  \
