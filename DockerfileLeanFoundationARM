    copulas==0.7.0                  \
    cufflinks==0.17.3               \
    gym==0.23.1                     \
    ipywidgets==8.0.0rc1            \
    deap==1.3.3                     \
    cvxpy==1.2.1                    \
    pykalman==0.9.5                 \
    pyro-ppl==1.8.2                 \
    sklearn-json==0.1.0             \
    dtw-python==1.2.2               \
    mxnet==1.9.1                    \
    gluonts==0.7.7                  \
    gplearn==0.4.2                  \
    jax==0.3.16                     \
    pennylane==0.25.1               \
    mplfinance==0.12.9b1            \
    hmmlearn==0.2.7                 \
    ta==0.10.1                      \
